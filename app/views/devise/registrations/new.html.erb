<% if @is_ajax %>
  <button type="button" class="sign-in-close close" data-dismiss="modal" aria-hidden="true">
    <span class="fa fa-times" aria-hidden="true"></span>
    <span class="sr-only">Close</span>
  </button>
  <div class="modal-content-inner">
      <h3><%= t('blacklight.sign_up.title') %></h3>
<% else %>
   <div id="content" class="col-md-12">
      <h2><%= t('blacklight.sign_up.title') %></h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "my-account-form user-sign-up" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label for="user_password_confirmation">Repeat Password</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Create My Account" %>
  </div>
<% end %>

<% if @is_ajax %>
  </div>
<% end %>

    
<div class="sign-up-benefits">
  <div class="sign-up-benefits__content">
    <h3>With an account you can:</h3>
    <ul class="sign-up-benefits__list">
      <li>
        <%=image_tag("icons/icon-favorites.svg", class: "", alt: "")%>
          <p>Create lists of favorites to save items to study,
          cite and share later</p>
        </li>
      <li>
        <%=image_tag("icons/icon-manageitems.svg", class: "", alt: "")%>
        <p>Manage your items from across our repositories in
        one convenient location</p>
      </li>
      <li>
        <%=image_tag("icons/icon-savedsearch.svg", class: "", alt: "")%>
          <p>Save your searches and pick up your exploration where
        you left off</p>
      </li>
    </ul>
  </div>
</div>

<% if !@is_ajax %>
  </div>
<% end %>  