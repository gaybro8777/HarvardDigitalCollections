<header class="hl__topHeader">
  <div class="hl__topHeader__left">
    <ul class="hl__topHeaderNav">
      <li class="hl__topHeaderTitle__harvard">
        <a class="hl__topHeader__link" href="https://digitalcollections.library.harvard.edu/">
          Digital <span class="hl__topHeaderTitle__collections hl__topHeader__link">Collections</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="hl__topHeader__right">
    <a href="https://library.harvard.edu">
      <div class="hl__headerLogo">
        <%= image_tag("hl_header-logo.svg", alt: "Harvard logo") %>
      </div>
    </a>
  </div>

  <%if controller_name != 'fulltexts'%>
    <div class="searchbar__wrapper">
      <%= render_search_bar  %>    

      <a id="my-account-link" class="account-link <%=(user_signed_in?) ? "" : "hidden"%>" href="<%=blacklight.search_history_path%>">
        <span class="fa fa-user" aria-hidden="true"></span>
        <span class="account-link__text">My Account</span>
      </a>
      
      <a id="sign-in-link" class="account-link <%=(user_signed_in?) ? "hidden" : ""%>" href="/users/sign_in">
        <span class="fa fa-user" aria-hidden="true"></span>
        <span class="account-link__text">Log In</span>
      </a>
    </div>
  <%end%>
</header>

